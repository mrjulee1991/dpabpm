<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder package-path="com.dpabpm.mappingfile">
	<author>phucnv</author>
	<namespace>mappingfile</namespace>
	
	<entity name="MappingFile" local-service="true" remote-service="true" table="dpabpm_mappingfile">

		<!-- PK fields -->

		<column name="id" primary="true" type="long" />
		<column name="uuid" type="String" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="tableName" type="String" />
		<column name="dataPk" type="String" />			 <!-- primary key in tableName -->
		<column name="fileEntryId" type="long" />
		<column name="attFileTypeCode" type="String" />
		<column name="isCurrentUse" type="boolean" />

		<!-- Order -->

		<order by="asc">
			<order-column name="tableName" />
		</order>

		<!-- Finder methods -->

		<finder name="T_D" return-type="MappingFile">
			<finder-column name="tableName" />
			<finder-column name="dataPk" />
		</finder>
		
		<finder name="T_D_InUse" return-type="MappingFile" where="isCurrentUse==1">
			<finder-column name="tableName" />
			<finder-column name="dataPk" />
		</finder>

	</entity>
</service-builder>